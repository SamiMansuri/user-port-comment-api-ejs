<%- include('./partials/header.ejs', {title: "Users", nav_links:true, loggedUser:loggedUser}) %>
<h1>Users</h1>
<%- include("./partials/paggination.ejs", {routePath: "/users",pages}) %>
<% users.forEach(user => { %>
    <div class="user-card">
        <h3>Name: <a href="/users/<%= user._id.toString() %>"><%= user.name %></a></h3>
        <h4>Username: <%= user.username %></h4>
        <h4>Email: <%= user.email %></h4>
        <% if ( loggedUser.role === 'admin') { %>
            <form action="/users/<%= user._id.toString() %>?_method=DELETE" method="POST">
                <input type="hidden", name="_method", value="DELETE">
                <button value="Delete User" class="userDeleteBtn" type="submit">Delete</button>
            </form>
        <% } %>
    </div>
<%}); %>
<%- include("./partials/paggination.ejs", {routePath: "/users",pages}) %>
<%- include('./partials/footer.ejs') %>
