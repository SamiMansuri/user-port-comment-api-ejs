<%- include('./partials/header.ejs', {title: "Login", nav_links:false}) %>
<div class="login">
  <h1>Login</h1>
  <% if (message){ %>
    <h3 class="error-msg"><%= message %></h3>
  <% }%>
  <form action="/users/login" method="POST">
    Email: <input type="text" class="email" name="email" required/> <br />
    Password:
    <input type="password" class="password" name="password" required/> <br />
    <button type="submit">Submit</button>
  </form>
  <p><a href="/users/forgotPassword">Forgot Password</a></p>
  <p>Don't have an account? <a href="/users/signIn">Sign up</a></p>
  <%- include('./partials/footer.ejs') %>
</div>